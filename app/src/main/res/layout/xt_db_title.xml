<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#099fde">

    <ImageView
        android:id="@+id/db_back_btn"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:src="@drawable/common_btn_back_arrow" />

    <TextView
        android:id="@+id/db_title_tex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="ItemID"
        android:textAppearance="@style/tool_text_18_ffffff" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/db_add_btn"
            android:layout_width="31dip"
            android:layout_height="31dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/db_edit_btn"
            android:layout_width="31dip"
            android:layout_height="31dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/db_delete_btn"
            android:layout_width="31dip"
            android:layout_height="31dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/db_refresh_btn"
            android:layout_width="31dip"
            android:layout_height="31dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>